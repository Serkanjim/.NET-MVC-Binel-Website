@model Binel.Models.Post

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-16">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Silme</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-danger text-white text-center">
                        <h3 class="card-title">Post Silme</h3>
                    </div>
                    <div class="card-body">
                        <h4>Post Bilgileri</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">Başlık</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-4">İçerik</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PostText)</dd>

                            <dt class="col-sm-4">Yayınlanma Tarihi</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PublishDate)</dd>

                            <dt class="col-sm-4">Dış Platform</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ExternalPlatform)</dd>

                            <dt class="col-sm-4">Organizasyon</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Organization.OrganizationId)</dd>
                        </dl>

                        <div class="alert alert-danger" role="alert">
                            Bu postu silmek istediğinizden emin misiniz?
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="PostId" />
                            <div class="d-flex justify-content-between">
                                <input type="submit" value="Sil" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
