@model IEnumerable<Binel.Models.DonatePost>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout1";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-16">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Panel</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="display-4">Post Panel</h1>
            <a class="btn btn-primary" asp-action="Create">Yeni Post</a>
        </div>

        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.DonateId)</th>
                            <th>@Html.DisplayNameFor(model => model.OrganizationId)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.DonateText)</th>
                            <th>@Html.DisplayNameFor(model => model.PublishDate)</th>
                            <th>@Html.DisplayNameFor(model => model.MaxLimit)</th>
                            <th>@Html.DisplayNameFor(model => model.MinLimit)</th>
                            <th>@Html.DisplayNameFor(model => model.TotalDonate)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DonateId)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrganizationId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.DonateText)</td>
                                <td>@Html.DisplayFor(modelItem => item.PublishDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaxLimit)</td>
                                <td>@Html.DisplayFor(modelItem => item.MinLimit)</td>
                                <td>@Html.DisplayFor(modelItem => item.TotalDonate)</td>
                                <td>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.DonateId">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
