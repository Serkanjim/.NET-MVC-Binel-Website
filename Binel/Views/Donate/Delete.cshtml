@model Binel.Models.DonatePost

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout1";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-16">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sil</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="card-title">Sil</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-text text-center">Bu gönderiyi silmek istediğinizden emin misiniz?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Başlık</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Bağış Metni</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DonateText)</dd>

                        <dt class="col-sm-4">Yayınlanma Tarihi</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PublishDate)</dd>

                        <dt class="col-sm-4">Toplam Bağış</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalDonate)</dd>

                        <dt class="col-sm-4">Organizasyon</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Organization.OrganizationId)</dd>

                        <dt class="col-sm-4">Maksimum Limit</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxLimit)</dd>

                        <dt class="col-sm-4">Minimum Limit</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MinLimit)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DonateId" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Sil" class="btn btn-danger" />
                            <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
